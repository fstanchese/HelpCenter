<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/layout_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:padding="2dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text="# "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="40px"
            android:textColor="#030303"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/chamado_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:textColor="#000cff"
            android:textSize="40px"
            android:textAppearance="?android:attr/textAppearanceMedium"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:padding="2dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text="Solicitante: "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="40px"
            android:textColor="#030303"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/chamado_solicitante"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:textColor="#000cff"
            android:textSize="40px"
            android:textAppearance="?android:attr/textAppearanceMedium"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:padding="2dp"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text="Fila: "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="40px"
            android:textColor="#030303"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/chamado_fila"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:textColor="#000cff"
            android:textSize="40px"
            android:textAppearance="?android:attr/textAppearanceMedium"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:padding="2dp"
            android:weightSum="1">
        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text="Situação: "
            android:textAlignment="viewEnd"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#030303"
            android:textSize="40px"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/chamado_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:textColor="#000cff"
            android:textSize="40px"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:padding="2dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text="Inicio prazo: "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="40px"
            android:textColor="#030303"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/chamado_cadastro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000cff"
            android:textSize="40px"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:padding="2dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text="Limite: "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="40px"
            android:textColor="#030303"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/chamado_limite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000cff"
            android:textSize="40px"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:padding="2dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text="Tempo Restante: "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="40px"
            android:textColor="#030303"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/chamado_prazo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000cff"
            android:textSize="40px"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:padding="2dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text="Inicio Atendimento: "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="40px"
            android:textColor="#030303"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/chamado_inicioatendimento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000cff"
            android:textSize="40px"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:padding="2dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text="Fim Atendimento: "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="40px"
            android:textColor="#030303"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/chamado_fimatendimento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000cff"
            android:textSize="40px"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:orientation="horizontal"
        android:layout_marginBottom="5pt"
        android:padding="2dp">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Assunto"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="50px"
            android:textColor="#030303"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginBottom="5pt"
        android:padding="2dp">

        <TextView
            android:id="@+id/chamado_assunto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000cff"
            android:textSize="40px"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:orientation="horizontal"
        android:layout_marginBottom="5pt"
        android:padding="2dp">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Descrição"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="50px"
            android:textColor="#030303"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginBottom="5pt"
        android:padding="2dp">

        <ScrollView
            android:id="@+id/ScrollView01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/chamado_descricao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000cff"
                android:textSize="40px"/>

        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:orientation="horizontal"
        android:layout_marginBottom="5pt"
        android:padding="2dp">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Solução"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="50px"
            android:textColor="#030303"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="5pt"
        android:orientation="horizontal"
        android:padding="2dp">

        <ScrollView
            android:id="@+id/ScrollView02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/chamado_solucao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000cff"
                android:textSize="40px" />

        </ScrollView>
    </LinearLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <Button
            android:id="@+id/atenderChamado"
            android:background="#6495ED"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Atender"
            android:onClick="atenderChamado"/>

    </RelativeLayout>
</LinearLayout>

