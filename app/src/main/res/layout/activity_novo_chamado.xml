<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/layout_bg"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginBottom="5pt"
        android:padding="2dp">


        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:lines="1"
            android:text="Fila:  "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="50px"
            android:textColor="#030303"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/fila_spinner"
            android:layout_width="4dp"
            android:textSize="60px"
            android:layout_height="wrap_content"
            android:layout_weight="1.72" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginBottom="5pt"
        android:padding="2dp">


        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:lines="1"
            android:text="SLA: "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="50px"
            android:textColor="#030303"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/sla_spinner"
            android:layout_width="4dp"
            android:textSize="60px"
            android:layout_height="wrap_content"
            android:layout_weight="1.72" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:orientation="horizontal"
        android:layout_marginBottom="5pt"
        android:padding="2dp">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Assunto"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="50px"
            android:textColor="#030303"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginBottom="5pt"
        android:padding="2dp">

        <EditText
            android:id="@+id/chamado_assunto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#000000"
            android:ems="10"
            android:maxLength="100"
            android:inputType="textPersonName"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:orientation="horizontal"
        android:layout_marginBottom="5pt"
        android:padding="2dp">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Descrição"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="50px"
            android:textColor="#030303"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginBottom="5pt"
        android:padding="2dp">

        <ScrollView
            android:id="@+id/ScrollView01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/chamado_descricao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#000000"
                android:ems="10"
                android:maxLength="1000"
                android:inputType="textMultiLine" />

        </ScrollView>
    </LinearLayout>

    <Button
        android:id="@+id/salvarChamado"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#6495ED"
        android:text="Salvar"
        android:onClick="salvarChamado"/>

</LinearLayout>


